<!DOCTYPE html>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<ui:style>
		.dialog {
			background: #d3e9ff;
		}
		
		.message {
			color: crimson;
		}
		
		.dialog button {
			width: 6em;
		}
	</ui:style>
	<g:HTMLPanel styleName="{style.dialog}">
		<TABLE ALIGN="CENTER" width="100%" height="100%" border="0px" cellpadding='0' cellspacing='0'>
			<TR>
				<TD ALIGN="CENTER">
					<g:DockPanel ui:field="panel" width="100%" height="100%"
						spacing="0" horizontalAlignment="ALIGN_CENTER" />
				</TD>
			</TR>
			<TR>
				<TD ALIGN="CENTER">
					<g:Label ui:field="message" styleName="{style.message}"></g:Label>
				</TD>
			</TR>
			<TR>
				<TD ALIGN="CENTER">
					<TABLE width="90%" ALIGN="CENTER" border="0px">
						<TR>
							<TD width="50%" ALIGN="CENTER">
								<g:Button ui:field="cancel" tabIndex="101">取消</g:Button>
							</TD>
							<TD ALIGN="CENTER">
								<g:Button ui:field="confirm" tabIndex="102">确定</g:Button>
							</TD>
						</TR>
					</TABLE>
				</TD>
			</TR>
		</TABLE>
	</g:HTMLPanel>
</ui:UiBinder>
