<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style>
		.tishi {
		text-indent: 1em;
		width: 100%;
		}

		.xiaoxi {
		text-align: center;
		/* text-indent: 1em; */
		/* height: 20px; */
		color: crimson;
		font-size: 12px;
		}

		.anniu {
		height: 25px;
		width:	120px;
		font-weight: bold;
		}

	</ui:style>	
	
	<g:HTMLPanel>
		<table border="0" cellpadding="0" cellspacing="5px">
			<tr>
				<td width="100%" height="20px" align="left" colspan="2">
					<g:Label ui:field="label" styleName="{style.tishi}"></g:Label>
				</td>
			</tr>
			<tr>
				<td height="40px" align="center" id="element" colspan="2">
					<g:VerticalPanel ui:field="mainPanel"></g:VerticalPanel>
				</td>
			</tr>
			<tr>
				<td align="center" colspan="2">
					<g:Label ui:field="message" styleName="{style.xiaoxi}">&nbsp;</g:Label>
				</td>
			</tr>
			<tr align="center">
				<td width="50%">
					<g:Button ui:field="submit" styleName="gwt-Button {style.anniu}"></g:Button>
				</td>
				<td>
					<g:Button ui:field="cancel" styleName="gwt-Button {style.anniu}">取消</g:Button>
				</td>
			</tr>
		</table>
	</g:HTMLPanel>
</ui:UiBinder> 