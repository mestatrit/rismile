<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel width="100%">
		<TABLE width="100%" height="100%" align="CENTER" BORDER="0">
			<TR align="CENTER">
				<TD width="50%">图片</TD>
				<TD width="25%">属性</TD>
				<TD width="25%">摄像头列表</TD>
			</TR>
			<TR align="CENTER">
				<TD>
					<g:DecoratorPanel>
						<g:Image ui:field='eyes'></g:Image>
					</g:DecoratorPanel>
				</TD>
				<TD>
					<g:DecoratorPanel>
						<g:VerticalPanel>
							<g:Label ui:field="title"></g:Label>
							<g:Label ui:field="ident"></g:Label>
							<g:Label ui:field="seq"></g:Label>
							<g:Label ui:field="picsize"></g:Label>
							<g:Label ui:field="gps"></g:Label>
							<g:Label ui:field="gps2"></g:Label>
							<g:Label ui:field="timestamp"></g:Label>
						</g:VerticalPanel>
					</g:DecoratorPanel>
				</TD>
				<TD>
					<g:Label ui:field="currentident"></g:Label>
					<g:Label>请点击列表中的摄像头标号</g:Label>
					<g:Grid ui:field="identlist" width="100%">
					</g:Grid>
				</TD>
			</TR>
		</TABLE>
	</g:HTMLPanel>
</ui:UiBinder> 