<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel width="100%" ui:field="frame">
		<TABLE width="100%" height="100%" align="CENTER">
			<TR>
				<TD width="40%">图片</TD>
				<TD width="30%">属性</TD>
				<TD width="30%">摄像头</TD>
			</TR>
			<TR>
				<TD width="40%">
					<g:DecoratorPanel>
		<g:Image ui:field='eyes'></g:Image>
					</g:DecoratorPanel>
				</TD>
				<TD width="30%">
					<g:DecoratorPanel>
						<g:VerticalPanel>
							<g:Label ui:field="title"></g:Label>
							<g:Label ui:field="ident"></g:Label>
							<g:Label ui:field="seq"></g:Label>
							<g:Label ui:field="picsize"></g:Label>
							<g:Label ui:field="gps"></g:Label>
							<g:Label ui:field="gps2"></g:Label>

							<g:Label ui:field="timestamp"></g:Label>
							<g:HTMLPanel><span ui:field='mphoto' /> </g:HTMLPanel>
						</g:VerticalPanel>
					</g:DecoratorPanel>
				</TD>
				<TD>
					<g:Label>请点击列表中的摄像头标号</g:Label>
					<g:Label ui:field="currentident">当前摄像头</g:Label>
					<g:DecoratorPanel>
						<g:Grid ui:field="identlist" width="200px">
						</g:Grid>
					</g:DecoratorPanel>
				</TD>
			</TR>
		</TABLE>
	</g:HTMLPanel>
</ui:UiBinder> 