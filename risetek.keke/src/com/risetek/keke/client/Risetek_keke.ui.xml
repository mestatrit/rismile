<!DOCTYPE html>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:style  type="com.risetek.keke.client.Risetek_keke.ViewStyle">
		.keke-table {
			background-color: gray;
			background: white;
			border: 1px solid #999;
			border-collapse: collapse;
			text-align: center;
		}
		
		.keke-table td {
			width: 32em;
			height: 10em;
			border: solid #999;
			border-width: 0px 0px 0px 0px;
			padding-top: 0px;
			padding-left: 0px;
			padding-bottom: 0px;
			padding-right: 0px;
		}
		
		.hilight {
			background: yellow;
		}
	</ui:style>

	<g:DockLayoutPanel unit='EM'>
		<g:center>
			<g:HTMLPanel width="100%">
				<TABLE align="center">
					<TR>
						<TD>
							<g:HTMLPanel ui:field="skins">
								<TABLE align="center" border="0">
									<TR>
										<TD colspan="3">
											<g:DecoratorPanel>
												<g:HTMLPanel width="100%">
													<TABLE align="center">
														<TR>
															<TD>
																<g:Grid ui:field="keke" width="100%" height="100%" styleName="{style.keke-table}"></g:Grid>
															</TD>
														</TR>
													</TABLE>
												</g:HTMLPanel>
											</g:DecoratorPanel>
										</TD>
									</TR>
									<TR>
										<TD width="70%">
											<span ui:field="logger">系统信息</span>
										</TD>
										<TD width="20%" align="right">
											<TABLE width="100%">
												<TR>
													<TD></TD>
													<TD>
														<g:Button ui:field="up">上</g:Button>
													</TD>
													<TD></TD>
												</TR>
												<TR>
													<TD>
														<g:Button ui:field="left">左</g:Button>
													</TD>
													<TD></TD>
													<TD>
														<g:Button ui:field="right">右</g:Button>
													</TD>
												</TR>
												<TR>
													<TD></TD>
													<TD>
														<g:Button ui:field="down">下</g:Button>
													</TD>
													<TD></TD>
												</TR>
											</TABLE>
										</TD>
										<TD width="10%">
											<g:Button ui:field="card">刷卡</g:Button>
										</TD>
									</TR>
								</TABLE>
							</g:HTMLPanel>

						</TD>
					</TR>
				</TABLE>
			</g:HTMLPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder>

